<% 

const query_ids = Object.keys(request.query);
const body_ids = Object.keys(request.body);

%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="js/calo.js"></script>
    <style>
      .static_windows_1 {
        position: fixed; top: 0; bottom: 0; left: 0; right: 0;
        background: url("img/hielos_1.png");
      }
      .static_windows_2 {
        display: table;
        width: 100%;
        height: 100%;
      }
      .static_windows_3 {
        display: table-cell;
        width: 100%;
        height: 100%;
        text-align: center;
        vertical-align: middle;
      }
      .dialog_window_container_1 {
        display: inline-block;
        width: auto;
      }
      .dialog_window_container_2 {
        width: 100%;
      }
    </style>
</head>
<body class="win7">
<div class="static_windows_1">
    <div class="window active" style="max-width: 300px">
        <div class="title-bar">
            <div class="title-bar-text">A window with contents</div>
            <div class="title-bar-controls">
            <button aria-label="Minimize"></button>
            <button aria-label="Maximize"></button>
            <button aria-label="Close"></button>
            </div>
        </div>
        <div class="window-body has-space">
            <p>There's so much room for activities!</p>
        </div>
    </div>
    <p>Los parámetros de la query son <%-query_ids.length%>.</p>
    <% 
    if(request.query) {
        %>
        <ol>
        <%
        for(let index = 0; index < query_ids.length; index++) {
            const query_id = query_ids[index];
            const query_value = request.query[query_id];
            %>
            <li><%-query_id%>: <%-query_value%></li>
            <%
        }
        %>
        </ol>
        <%
    }
    %>
    <p>Los parámetros del body son <%-body_ids.length%>.</p>
</div>
</body>
</html>